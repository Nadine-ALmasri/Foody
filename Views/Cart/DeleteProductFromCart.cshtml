@model CartBooks
@section Styles {
    <style>
        /* Set background color to black */
        body {
            background-image: url(https://homedecorbliss.com/wp-content/uploads/2022/07/Wood-planks-texture-background..jpg);
           
        }

        /* Adjust positioning of content */
        #recipe-section {
            padding-top: 200px;
        }

        /* Additional styles for recipe content */
        /* Add your custom styles here */



    </style>
}
<div id="recipe-section" style="color:black"></div>
<h4>Delete Product</h4>
<hr />
<h5>Are you sure you want to Remove this Product from the cart?</h5>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Price)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Description)
        </dd>
        <dt class="col-sm-2">
            Category's Name'
        </dt>
    </dl>
    <form method="post" asp-action="DeleteProductFromCart" asp-controller="Cart">
        <input type="hidden" asp-for="@Model.Book.Id" />
        <input type="submit" value="Remove" class="btn btn-danger" />
    </form>
    <br />
    <a asp-action="Index"  class="btn btn-dark">Cancel</a>
</div>
<div></div>