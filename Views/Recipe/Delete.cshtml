@model RecipeDTO
@using FoodRecipe.Models.DTOs ;
@section Styles {
    <style>
        /* Set background color to black */
        body {
            background-image: url(https://homedecorbliss.com/wp-content/uploads/2022/07/Wood-planks-texture-background..jpg);
            color: white;
            min-height: 100vh;
        }

        /* Adjust positioning of content */
        #recipe-section {
            padding-top: 50px;
            padding-bottom: 100px;
        }

        /* Additional styles for recipe content */
        .contact-form {
            margin-top: 20px;
        }

            .contact-form label {
                display: block;
                margin-bottom: 5px;
            }

            .contact-form input[type="text"] {
                width: 100%;
                padding: 8px;
                margin-bottom: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
                box-sizing: border-box;
            }

        .btn-save {
            margin-top: 20px;
        }
    </style>
}
<div id="recipe-section">
<h1>Delete Recipe</h1>

<p>Are you sure you want to delete this?</p>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Model.ImgUrl" alt="Recipe Image" style="width: 200px; height: 200px;" /></dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.RecipeId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
</div>