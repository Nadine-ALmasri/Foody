@model RecipeDTO
@using FoodRecipe.Models.DTOs ;

<h1>Delete Recipe</h1>

<p>Are you sure you want to delete this?</p>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@Model.ImgUrl" alt="Recipe Image" style="width: 200px; height: 200px;" /></dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.RecipeId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
